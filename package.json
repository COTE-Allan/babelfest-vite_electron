{
  "name": "babelfest-electron",
  "type": "module",
  "version": "0.9.1",
  "description": "Babelfest est un jeu de carte qui fusionne les univers des auteurs ind√©pendants.",
  "main": "./out/main/index.js",
  "author": "Cielesis",
  "homepage": "https://babelfest.fr",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "publish": "electron-builder --win -p always",
    "clean:modules": "modclean --run"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@ramonak/react-progress-bar": "^5.2.0",
    "axios": "^1.7.2",
    "cors": "^2.8.5",
    "custom-electron-titlebar": "^4.2.8",
    "date-fns": "^3.6.0",
    "electron-log": "^5.1.7",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1",
    "esm": "^3.2.25",
    "express": "^4.19.2",
    "firebase": "^10.12.4",
    "lodash": "^4.17.21",
    "modclean": "^3.0.0-beta.1",
    "rc-slider": "^11.1.1",
    "react-icons": "^5.3.0",
    "react-indiana-drag-scroll": "^2.2.0",
    "react-lazyload": "^3.2.1",
    "react-parallax-tilt": "^1.7.232",
    "react-player": "^2.16.0",
    "react-router-dom": "^6.25.1",
    "react-select": "^5.8.0",
    "react-slick": "^0.30.2",
    "react-switch": "^7.0.0",
    "react-toastify": "^10.0.5",
    "react-transition-group": "^4.4.5",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "react-zoom-pan-pinch": "^3.6.1",
    "reactjs-flip-card": "^2.0.3",
    "sass": "1.67.0",
    "slick-carousel": "^1.8.1",
    "use-sound": "^4.0.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cssnano": "^7.0.6",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "terser": "^5.31.6",
    "vite": "^5.3.4"
  },
  "build": {
    "appId": "com.coteallan.babelfest",
    "productName": "Babelfest",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "!**/node_modules/*/{test,tests}/**",
      "!**/*.map",
      "!**/*.md",
      "!**/src/",
      "!**/.*"
    ],
    "asar": true,
    "publish": [
      {
        "provider": "generic",
        "url": "releases.babelfest.fr"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "babelfest_w.ico"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "resources/babelfest.ico",
      "uninstallerIcon": "resources/babelfest.ico",
      "uninstallDisplayName": "Babelfest",
      "installerSidebar": "resources/installerSidebar.bmp",
      "uninstallerSidebar": "resources/installerSidebar.bmp",
      "license": "resources/license.md",
      "allowToChangeInstallationDirectory": true
    }
  }
}
